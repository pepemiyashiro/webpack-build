{
  "name": "webpack-build",
  "version": "1.0.0",
  "description": "Webpack Build",
  "main": "index.js",
  "scripts": {
    "start": "run-s dependencies dev",
    "dev": "run-s clean build && run-p lint:watch server",
    "build": "run-s build:*",
    "build:html": "ncp source/templates build",
    "build:scripts": "webpack --config webpack",
    "lint": "esw webpack/index.js source/scripts build --color",
    "lint:watch": "npm run lint -- --watch",
    "server": "node server",
    "clean": "rimraf build",
    "dependencies" : "npm install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pepemiyashiro/webpack-build.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/pepemiyashiro/webpack-build/issues"
  },
  "homepage": "https://github.com/pepemiyashiro/webpack-build#readme",
  "devDependencies": {
    "babel-core": "^6.22.1",
    "babel-loader": "^6.2.10",
    "babel-plugin-transform-runtime": "^6.22.0",
    "babel-preset-env": "^1.1.8",
    "browser-sync": "^2.18.7",
    "browser-sync-webpack-plugin": "^1.1.4",
    "bs-fullscreen-message": "^1.1.0",
    "eslint": "^3.15.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-watch": "^2.1.14",
    "html-webpack-plugin": "^2.28.0",
    "ncp": "^2.0.0",
    "npm-run-all": "^4.0.1",
    "rimraf": "^2.5.4",
    "strip-ansi": "^3.0.1",
    "webpack": "^2.2.1",
    "webpack-dev-middleware": "^1.10.0"
  }
}
